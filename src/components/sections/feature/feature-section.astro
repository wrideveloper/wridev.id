---
import Container from "~/components/sections/container.svelte";
import PillsText from "~/components/text/pills.astro";
import InlineIcon from "~/components/text/inline-icon.astro";
import StatsPool from "~/components/sections/feature/components/stats-pool.svelte";

const { className } = Astro.props;

import { stats } from "~/data/features";
---

<Container className={className}>
    <PillsText>FEATURES</PillsText>
    <div class="flex flex-col gap-8 md:gap-14 items-center w-full mt-10 mb-20">
        <div>
            <div
                class="relative flex justify-center items-end text-4xl md:text-6xl font-medium"
            >
                From
                <span class="wri-italic from-wri-blue to-wri-blue/45"
                    >&nbsp;Learners</span
                >
                <InlineIcon
                    name="ph:student-fill"
                    color="wri-blue"
                    rotate={3}
                    className="translate-y-3"
                />
                to
            </div>
            <div
                class="relative flex justify-center items-end text-4xl md:text-6xl font-medium"
            >
                <span class="wri-italic from-wri-yellow to-wri-yellow/45"
                    >Leaders</span
                >
                <InlineIcon
                    name="ph:crown-simple-fill"
                    color="wri-yellow"
                    rotate={-2}
                    className="translate-y-2"
                />
                Together
            </div>
        </div>
        <StatsPool stats={stats} />
    </div>
</Container>

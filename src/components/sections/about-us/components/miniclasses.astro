---
import { Icon } from "astro-icon/components";
const {
    titleIcon,
    color,
    title,
    description,
    image,
    alt = "Card image",
} = Astro.props;
---

<div
    class="miniclass h-120 bg-white rounded-xl ring-2 ring-wri-grey-400 overflow-hidden flex flex-col hover:ring-4 hover:ring-wri-blue transition-all duration-300"
>
    <div
        class="flex justify-center items-center h-2/3 bg-wri-grey-200 relative"
    >
        <img src={image} alt={alt} class="h-30 object-cover" />
    </div>

    <div class="h-1/3 p-6 flex flex-col justify-center">
        <div class="flex items-center mb-2">
            <Icon name={titleIcon} class={`w-6 h-6 mr-3 ${color}`} />
            <h1 class="text-2xl font-bold">{title}</h1>
        </div>
        <p class="text-wri-grey-600 line-clamp-3">{description}</p>
    </div>
</div>

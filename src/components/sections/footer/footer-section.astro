---
const { className } = Astro.props;
import { footerSections } from "~/data/footer";
import { t, language } from "~/i18n";

const tr = t(Astro.currentLocale as keyof typeof language);

const translatedFooterSections = [
    {
        title: tr.footer.miniclass,
        links: [
            { name: tr.footer.frontend, href: "#" },
            { name: tr.footer.backend, href: "#" },
            { name: tr.footer.uiux, href: "#" },
            { name: tr.footer.game, href: "#" },
        ],
    },
    {
        title: tr.footer.contact,
        links: footerSections[1].links,
    },
];
---

<footer class={`flex flex-col w-full px-6 md:px-28 py-16 gap-8 md:gap-10 ${className}`}>
    <div class="flex flex-col md:flex-row gap-8 md:gap-0">
        <div class="max-w-[20rem]">
            <img src="/assets/wri-logo.webp" alt="WRI Dev Logo" class="h-14" />
            <p class="mt-4 text-wri-gray-600">
                {tr.footer.description}
            </p>
        </div>
        <div class="ml-0 md:ml-auto flex gap-10">
            {
                translatedFooterSections.map((section) => (
                    <div>
                        <p class="text-xl text-semibold text-wri-gray-800">{section.title}</p>
                        <div class="mt-4 flex flex-col gap-2 text-wri-gray-400">
                            {section.links.map((link) => (
                                <p><a href={link.href}>{link.name}</a></p>
                            ))}
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
    <div class="flex text-wri-gray-600">
        <div>{tr.footer.copyright}</div>
        <div class="ml-auto">{tr.footer.builtWith}</div>
    </div>
</footer>

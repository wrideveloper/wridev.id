---
import { t, language } from "~/i18n";

import { getImage } from "astro:assets";
import inlinePicRaw from "~/assets/talents/inline-pics.webp";

const optimizedInlinePic = await getImage({
  src: inlinePicRaw,
  format: "webp",
});

const tr = t(Astro.currentLocale as keyof typeof language);

const headlineWithImage = tr.talent.headline_1.replace(
  "{{inline_image}}",
  optimizedInlinePic.src
);

---
<div class="flex flex-col items-center justify-center text-center">
    <div class="mt-8 flex flex-col items-center font-medium text-gray-900 text-5xl md:text-7xl tracking-tight">
        <div
            class="flex flex-wrap items-center justify-center gap-x-4 gap-y-2"
            set:html={headlineWithImage}
        />

        <div class="mt-2 md:mt-4" set:html={tr.talent.headline_2} />
    </div>
    <div class="my-4 md:mt-8 max-w-2xl text-lg text-wri-gray-600 leading-relaxed">
        <p>
            {tr.talent.description}
        </p>
    </div>
</div>

---
import Container from "~/components/sections/container.svelte";
import PillsText from "~/components/text/pills.astro";
const { className } = Astro.props;
import { t, language } from "~/i18n";

const tr = t(Astro.currentLocale as keyof typeof language);
---

<Container className={className}>
    <div class="flex flex-col items-center justify-center text-center">
        <PillsText>{tr.talent.pills}</PillsText>

        <div
            class="mt-8 flex flex-col items-center font-medium text-gray-900 text-5xl md:text-7xl tracking-tight"
        >
            <div
                class="flex flex-wrap items-center justify-center gap-x-4 gap-y-2"
            >
                <span class="whitespace-nowrap">
                    <span
                        class="bg-linear-to-b from-wri-blue to-wri-blue/45 bg-clip-text text-transparent pr-2 wri-italic"
                    >
                        {tr.talent.skilled}
                    </span>
                    {tr.talent.minds}
                </span>

                <div class="shrink-0 flex items-center justify-center px-2">
                    <img
                        src="/assets/talents/inline-pics.webp"
                        alt="Our Story"
                        class="h-16 w-auto object-contain md:h-20"
                    />
                </div>

                <span class="whitespace-nowrap">
                    {tr.talent.real}
                    <span
                        class="bg-linear-to-b from-wri-yellow to-wri-yellow/45 bg-clip-text text-transparent pl-2 wri-italic"
                    >
                        {tr.talent.experience}
                    </span>
                </span>
            </div>

            <div class="mt-2 md:mt-4">
                {tr.talent.endless} <span class="from-wri-blue to-wri-blue/45 wri-italic"
                    >{tr.talent.possibilities}</span
                >
            </div>
        </div>

        <div class="mt-8 max-w-2xl text-lg text-wri-gray-600 leading-relaxed">
            <p>
                {tr.talent.description}
            </p>
        </div>
    </div>
</Container>

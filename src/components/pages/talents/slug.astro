---
export const prerender = false;

import Layout from "~/layouts/Layout.astro";
import ProfileSection from "~/components/sections/profile-page/profile-section.astro";

const { talent_data } = Astro.props;

const seoTitle = `${talent_data.name} | Workshop Riset Informatika`;

const seoDescription =
  talent_data.about ||
  `Profile of ${talent_data.name}, a digital talent at Workshop Riset Informatika (WRI).`;

const canonical = Astro.url.href;
---

<Layout
  title={seoTitle}
  description={seoDescription}
  canonical={canonical}
>
  <style is:global>
    nav {
      display: none !important;
    }
    footer {
      display: none !important;
    }
  </style>

  <div class="pt-8 w-full min-h-screen">
    <ProfileSection talent_data={talent_data} />
  </div>
</Layout>

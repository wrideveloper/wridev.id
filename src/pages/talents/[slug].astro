---
import Layout from "~/layouts/Layout.astro"
import ProfileSection from "~/components/sections/profile-page/profile-section.astro";
import { TALENT_DATA } from "~/data/talents";

export async function getStaticPaths() {
  const talents = TALENT_DATA.talents;

  return talents.map((talent) => {
    const slug = talent.name.toLowerCase().replace(/\s+/g, '-');

    return {
      params: { slug }, // This matches the filename [slug].astro
      props: { talent }, // Pass the entire talent object as a prop to the page
    };
  });
}

const { talent } = Astro.props;
---

<Layout>
  <style is:global>
    nav {
      display: none !important;
    }
  </style>
  <main class="pt-16 w-full min-h-screen">
    <ProfileSection talent={talent} />
  </main>
</Layout>

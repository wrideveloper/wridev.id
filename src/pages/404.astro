---
import Layout from "~/layouts/Layout.astro";
import { Icon } from "astro-icon/components";
---

<Layout>
    <div class="w-screen h-screen bg-linear-to-b from-wri-white from-65% to-wri-lightblue to-100% flex flex-col items-center justify-center overflow-hidden text-center px-4 sm:px-8 md:px-30">
        <div class="flex flex-col justify-center items-center font-medium">
            <div class="text-2xl sm:text-3xl md:text-4xl text-wri-gray-800 mt-4 sm:mt-6">
                Oops! Page Not Found
            </div>
            <div class="text-base sm:text-lg md:w-4/7 mt-4 sm:mt-5 text-wri-gray-600 font-normal px-4">
                The page you're looking for doesn't exist or has been moved. Let's get you back on track!
            </div>
            <a href="/">
                <div class="flex justify-center items-center bg-wri-lighterblue mt-8 sm:mt-10 text-wri-white p-1.5 rounded-2xl">
                    <div class="flex justify-center items-center bg-linear-to-b from-wri-blue to-wri-blue/56 px-4 sm:px-5 py-2 sm:py-3 rounded-xl border border-wri-darkerblue text-base sm:text-lg">
                        <Icon name="ph:house-bold" class="w-5 sm:w-6 h-5 sm:h-6 text-wri-white mr-2" /> Return to Home
                    </div>
                </div>
            </a>
        </div>
    </div>
</Layout>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }
</style>

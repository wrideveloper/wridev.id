---
import MiniclassSlugPage from "~/components/pages/miniclass/slug.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const miniclasses = await getCollection("miniclass");
  const filteredMiniclasses = miniclasses.filter((miniclass) => miniclass.slug.startsWith("en/"));

  return filteredMiniclasses.map((miniclass) => ({
    params: { slug: miniclass.slug.replace("en/", "") },
  }));
}
